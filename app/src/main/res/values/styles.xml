<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recycler_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_zero</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="recycler_iv_style">
        <item name="android:layout_width">@dimen/activity_zero</item>
        <item name="android:layout_height">@dimen/recycler_item_height</item>
        <item name="android:layout_marginLeft">@dimen/recycler_item_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/recycler_item_marginTop</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="recycler_item_tv_style">
        <item name="android:layout_width">@dimen/activity_zero</item>
        <item name="android:layout_height">@dimen/recycler_item_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/recycler_item_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/recycler_item_marginTop</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="title_item_iv_style">
        <item name="android:layout_width">@dimen/activity_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/title_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/left</item>
    </style>

    <style name="title_tv_style">
        <item name="android:layout_width">@dimen/activity_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_margin">@dimen/title_margin</item>
    </style>

    <style name="recycler_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/recycler_item_marginLeft</item>
    </style>

</resources>
